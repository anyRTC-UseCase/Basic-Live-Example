<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_47">

    <TextView
        android:id="@+id/userId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_centerVertical="true"
        android:textSize="@dimen/sp_14"/>

    <TextView
        android:id="@+id/self"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/userId"
        android:layout_centerVertical="true"
        android:textSize="@dimen/sp_14"
        android:textColor="#FFFFFF"
        android:text="(自己)" />

    <TextView
        android:id="@+id/txaudio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/rxaudio"
        android:textColor="@color/up_text_color"
        android:textSize="@dimen/sp_11"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_centerVertical="true"
        app:drawableStartCompat="@drawable/up" />

    <TextView
        android:id="@+id/rxaudio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/down_text_color"
        android:textSize="@dimen/sp_11"
        android:layout_marginEnd="@dimen/dp_20"
        app:drawableStartCompat="@drawable/down" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/line_color"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>